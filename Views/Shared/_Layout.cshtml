<!DOCTYPE html>
<html lang="en">
<head>
    
    <script type="importmap"></script>   



    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SaladCart</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Fonts (optional) -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SaladCart.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Nunito', sans-serif;
            background-color: #f3f9f4; /* light green background */
        }

        .navbar {
            background: linear-gradient(to right, #1b5e20, #2e7d32);
           
        }

            .navbar .nav-link, .navbar-brand {
                color:  #ffffff ;
                font-weight: 600;
            }

                .navbar-brand::before {
                    content: "🥗 ";
                }

        footer {
            background-color: #e6f2e6;
            color: #388e3c;
        }

        .footer a {
            color: #2e7d32;
        }

        .navbar-logo {
            height: 32px;
            width: auto;
            object-fit: contain;
        }

    </style>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                                
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SaladCart</a>               
               

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a> </li>
                            <li><a class="nav-link"  asp-controller="Account" asp-action="Register">Register</a></li>
                            
                        }
                        else 
                        {
                            @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-controller="Admin" class="nav-link" asp-action="Index">Dashboard</a></li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="OrderDetails">Orders</a>
                                </li>
                                }
                                else
                                {
                                <li class="nav-item">
                                <a class="nav-link" asp-controller="UserOrder" asp-action="UserOrders">Order</a>
                                </li>
                                }
                            <li><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a></li>
                       
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">

        <div class="container text-center small" style="line-height: 1.4;">
           
            <div>
                Enjoy <strong>10% discount</strong> on weekly subscriptions. Customized salads available.*
            </div>
            <div>
                Contact us: <a href="tel:9619851799" class="text-success fw-bold">9619851799</a>
            </div>
            <div>
                &copy; 2025 - SaladCart 🌿 |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> |
                <a href="https://www.instagram.com/divineveggiedelight/" target="_blank" class="text-success ms-1">
                    <i class="bi bi-instagram"></i> Instagram
                </a>
            </div>
        </div>

       
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
