@model SaladCart.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="text-center mb-4">
                <h1 class="display-5 text-success">Login</h1>
                <p class="text-muted">Enter your credentials to continue</p>
            </div>


            <form asp-action="Login" method="post" asp-controller="Account" class="card p-4 shadow-sm border-success">
                <input type="email" class="form-control border-success" name="email" placeholder="Email" required />
                <input type="password" class="form-control border-success"  name="password" placeholder="Password" required />
                <button type="submit" class="d-grid mb-3">Login</button>
            

                <div class="text-center">
                    <a href="#" id="forgot-password" class="d-block mb-2 text-success">Forgot your password?</a>
                    <a asp-controller="Account" asp-action="Register" class="text-success">Register as a new user</a>
                </div>

            </form>

            @if (ViewBag.Message != null)
            {
                <p class="mt-3 text-danger text-center">@ViewBag.Message</p>
            }

        </div>
    </div>
</div>